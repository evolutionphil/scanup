{
  "expo": {
    "name": "ScanUp",
    "slug": "scanup",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "scanup",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "owner": "visiongo",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.visiongo.scanupp",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "ScanUp needs camera access to scan documents",
        "NSPhotoLibraryUsageDescription": "ScanUp needs photo library access to import and save scanned documents",
        "NSPhotoLibraryAddUsageDescription": "ScanUp needs permission to save scanned documents to your photo library",
        "NSMicrophoneUsageDescription": "ScanUp may use the microphone for video capture",
        "ITSAppUsesNonExemptEncryption": false
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.visiongo.scanupp",
      "versionCode": 2,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#3B82F6"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.VIBRATE",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_MEDIA_VISUAL_USER_SELECTED",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_MEDIA_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-dev-client",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#3B82F6"
        }
      ],
      "expo-font",
      "expo-localization",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow ScanUp to access your camera to scan documents"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow ScanUp to access your photos to import documents",
          "cameraPermission": "Allow ScanUp to access your camera to scan documents"
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow ScanUp to save scanned documents to your photo library",
          "savePhotosPermission": "Allow ScanUp to save scanned documents to your photo library"
        }
      ],
      [
        "react-native-document-scanner-plugin",
        {
          "cameraPermission": "Allow ScanUp to access your camera to scan documents"
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Allow ScanUp to access your microphone for video capture"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "EXPO_PUBLIC_BACKEND_URL": "https://scanup-production.up.railway.app",
      "eas": {
        "projectId": "4c3b5675-c4ad-42eb-9b9b-e3410dae2f85"
      }
    },
    "runtimeVersion": "1.0.0"
  }
}
